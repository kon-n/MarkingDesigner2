<UserControl x:Class="MarkingDesigner.Views.EditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:bh="clr-namespace:MarkingDesigner.Behaviors"
             xmlns:cv="clr-namespace:MarkingDesigner.Converters"
             xmlns:vm="clr-namespace:MarkingDesigner.ViewModels"
             xmlns:ctrl="clr-namespace:MarkingDesigner.Views.Controls">

    <UserControl.Resources>
        <cv:MmToDipConverter x:Key="mm2dip"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <DropShadowEffect x:Key="DropShadowEffect" BlurRadius="15" ShadowDepth="5" Opacity="0.4" Color="Black"/>

        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="{DynamicResource WindowBackBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{DynamicResource PanelBackBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Command="{Binding PrevSeqCommand}" 
                        Content="{DynamicResource Str_Prev}" 
                        Width="120" Height="40" FontSize="14" FontWeight="Bold"/>

                <ComboBox Grid.Column="1" ItemsSource="{Binding Sequences}" SelectedItem="{Binding CurrentSequence}"
                          DisplayMemberPath="Title" Margin="10,0" Height="40" FontSize="18" VerticalContentAlignment="Center" FontWeight="Bold"/>

                <Button Grid.Column="2" Command="{Binding NextSeqCommand}" 
                        Content="{DynamicResource Str_Next}" 
                        Width="120" Height="40" FontSize="14" FontWeight="Bold"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="{DynamicResource PanelBackBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid Grid.Row="0" ItemsSource="{Binding CurrentSequence.Jobs}" SelectedItem="{Binding SelectedJob, Mode=TwoWay}"
                          AutoGenerateColumns="False" CanUserAddRows="False" 
                          Background="{DynamicResource PanelBackBrush}" 
                          BorderThickness="0" HeadersVisibility="Column"
                          FontSize="14"
                          RowBackground="{DynamicResource PanelBackBrush}"
                          AlternatingRowBackground="{DynamicResource WindowBackBrush}"
                          Foreground="{DynamicResource TextBrush}"
                          SelectionMode="Single"
                          SelectionUnit="FullRow">

                    <DataGrid.ItemContainerStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                            <Setter Property="Background" Value="{DynamicResource PanelBackBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource SelectionBrush}"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.ItemContainerStyle>

                    <i:Interaction.Behaviors>
                        <bh:ScrollIntoViewBehavior/>
                    </i:Interaction.Behaviors>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{DynamicResource Str_HeaderID}" Binding="{Binding JobId}" Width="40" IsReadOnly="True" ElementStyle="{StaticResource CellTextStyle}"/>
                        <DataGridTextColumn Header="{DynamicResource Str_HeaderName}" Binding="{Binding Name}" Width="*" ElementStyle="{StaticResource CellTextStyle}"/>
                        <DataGridTextColumn Header="{DynamicResource Str_HeaderText}" Binding="{Binding Marking.Text}" Width="80" ElementStyle="{StaticResource CellTextStyle}"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Border Grid.Row="1" Padding="5" Background="{DynamicResource WindowBackBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Str_LabelAddFromList}" Foreground="{DynamicResource TextBrush}" Margin="2"/>
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="90"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox Grid.Column="0" ItemsSource="{Binding AllJobs}" SelectedItem="{Binding JobToAdd}"
                                      Height="40" FontSize="14" VerticalContentAlignment="Center" Margin="0,0,5,0">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding JobId, StringFormat='ID:{0}'}" FontWeight="Bold" Width="50"/>
                                            <TextBlock Text="{Binding Name}"/>
                                            <TextBlock Text=" - "/>
                                            <TextBlock Text="{Binding Marking.Text}" Foreground="Gray"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <Button Grid.Column="1" Command="{Binding AddJobCommand}" Background="#2E7D32" Foreground="White" BorderThickness="0">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="{DynamicResource Str_BtnAdd}" FontWeight="Bold"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <Button Command="{Binding DeleteJobCommand}" Height="35" Background="#C62828" Foreground="White" BorderThickness="0" Margin="0,5,0,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{DynamicResource Str_BtnRemove}" FontWeight="Bold"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>

            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="{DynamicResource BorderBrush}"/>

            <ScrollViewer Grid.Column="2" Background="{DynamicResource WindowBackBrush}" 
                          HorizontalScrollBarVisibility="Auto" 
                          VerticalScrollBarVisibility="Auto"
                          x:Name="MainScrollViewer">

                <!-- 常に中央に配置するための外側コンテナ -->
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <!-- 拡大縮小の対象となるコンテナ。Center指定で中央に寄せる -->
                    <Border HorizontalAlignment="Center" VerticalAlignment="Center" Margin="100">
                        <Grid Background="{DynamicResource CanvasBackBrush}" 
                              Effect="{StaticResource DropShadowEffect}">
                            <Grid.LayoutTransform>
                                <ScaleTransform ScaleX="{Binding ZoomScale}" ScaleY="{Binding ZoomScale}"/>
                            </Grid.LayoutTransform>

                            <ItemsControl ItemsSource="{Binding CurrentSequence.Jobs}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Canvas Width="{Binding Device.RangeX, Converter={StaticResource mm2dip}}" 
                                                Height="{Binding Device.RangeY, Converter={StaticResource mm2dip}}" 
                                                Background="Transparent"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Canvas.Left" Value="{Binding StartX, Converter={StaticResource mm2dip}}"/>
                                        <Setter Property="Canvas.Bottom"  Value="{Binding StartY, Converter={StaticResource mm2dip}}"/>
                                        <Setter Property="Panel.ZIndex" Value="{Binding JobId}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                <Setter Property="Panel.ZIndex" Value="9999"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Background="Transparent">
                                            <Grid.RenderTransform>
                                                <TranslateTransform X="{Binding OffsetX, Converter={StaticResource mm2dip}}" 
                                                                    Y="{Binding OffsetY, Converter={StaticResource mm2dip}}"/>
                                            </Grid.RenderTransform>
                                            <!-- Visual Layer: LayoutTransform enables proper layout sizing after flip -->
                                            <Border x:Name="Bd" 
                                                    BorderThickness="1" 
                                                    BorderBrush="Transparent" 
                                                    Background="Transparent" 
                                                    Padding="2">

                                                <Border.LayoutTransform>
                                                    <ScaleTransform ScaleY="-1"/>
                                                </Border.LayoutTransform>
                                                <ctrl:MarkingObject x:Name="MarkingCtrl" Text="{Binding Marking.Text}" FontType="{Binding Font}"
                                                                    CharHeight="{Binding Height}"
                                                                    PitchX="{Binding PitchX}"
                                                                    PitchY="{Binding PitchY}"
                                                                    RotationType="{Binding RotationType}"
                                                                    Stroke="{Binding Stroke}" StrokeThickness="1"/>
                                            </Border>

                                            <!-- Move Handle Layer: Outside the flip to simplify mouse interaction -->
                                            <Thumb Opacity="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                <i:Interaction.Behaviors>
                                                    <bh:ElementMoveBehavior 
                                                        PositionX="{Binding StartX, Mode=TwoWay}" 
                                                        PositionY="{Binding StartY, Mode=TwoWay}"
                                                        ZoomScale="{Binding DataContext.ZoomScale, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                                </i:Interaction.Behaviors>
                                                <Thumb.Template>
                                                    <ControlTemplate>
                                                        <Rectangle Fill="Transparent"/>
                                                    </ControlTemplate>
                                                </Thumb.Template>
                                            </Thumb>

                                            <!-- Resize Handle: Positioned at visual top (which is positive Y in DataTemplate Grid) -->
                                            <Thumb VerticalAlignment="Top" HorizontalAlignment="Center" Width="12" Height="12" Cursor="SizeNS" Margin="0,-6,0,0">
                                                <i:Interaction.Behaviors>
                                                    <bh:ElementResizeHeightBehavior Height="{Binding Height, Mode=TwoWay}"/>
                                                </i:Interaction.Behaviors>
                                                <Thumb.Template>
                                                    <ControlTemplate>
                                                        <Border Background="White" BorderBrush="Black" BorderThickness="1"/>
                                                    </ControlTemplate>
                                                </Thumb.Template>
                                            </Thumb>
                                        </Grid>

                                        <DataTemplate.Triggers>
                                            <!-- Selection: Green -->
                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                <Setter TargetName="Bd" Property="BorderBrush" Value="#FF00FF00"/>
                                                <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                                                <Setter TargetName="Bd" Property="Background" Value="#2200FF00"/>
                                            </DataTrigger>
                                            <!-- Out of Bounds: Red (Overrides selection) -->
                                            <DataTrigger Binding="{Binding IsOutOfBounds}" Value="True">
                                                <Setter TargetName="Bd" Property="BorderBrush" Value="#FFFF0000"/>
                                                <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                                                <Setter TargetName="Bd" Property="Background" Value="#22FF0000"/>
                                                <Setter TargetName="MarkingCtrl" Property="Stroke" Value="#FFFF0000"/>
                                            </DataTrigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>
                </Grid>
            </ScrollViewer>

            <GridSplitter Grid.Column="3" HorizontalAlignment="Stretch" Background="{DynamicResource BorderBrush}"/>

            <Border Grid.Column="4" Background="{DynamicResource PanelBackBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1,0,0,0">
                <ScrollViewer>
                    <StackPanel DataContext="{Binding SelectedJob}" Margin="10">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <TextBlock Text="{DynamicResource Str_PropTitle}" Foreground="{DynamicResource SelectionBrush}" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>

                        <TextBlock Text="{DynamicResource Str_PropName}" Foreground="{DynamicResource TextBrush}" FontSize="14"/>
                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15" Height="30" FontSize="14" VerticalContentAlignment="Center"/>

                        <TextBlock Text="{DynamicResource Str_PropText}" Foreground="{DynamicResource TextBrush}" FontSize="14"/>
                        <TextBox Text="{Binding Marking.Text, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15" Height="30" FontSize="14" VerticalContentAlignment="Center"/>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{DynamicResource Str_PropX}" Foreground="{DynamicResource TextBrush}" FontSize="14"/>
                                <TextBox Text="{Binding StartX, UpdateSourceTrigger=PropertyChanged, StringFormat=N1}" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="{DynamicResource Str_PropY}" Foreground="{DynamicResource TextBrush}" FontSize="14"/>
                                <TextBox Text="{Binding StartY, UpdateSourceTrigger=PropertyChanged, StringFormat=N1}" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{DynamicResource Str_PropPitchX}" Foreground="{DynamicResource TextBrush}" FontSize="14"/>
                                <TextBox Text="{Binding PitchX, UpdateSourceTrigger=PropertyChanged, StringFormat=N1}" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="{DynamicResource Str_PropPitchY}" Foreground="{DynamicResource TextBrush}" FontSize="14"/>
                                <TextBox Text="{Binding PitchY, UpdateSourceTrigger=PropertyChanged, StringFormat=N1}" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Rotation" Foreground="{DynamicResource TextBrush}" FontSize="14"/>
                        <ComboBox SelectedIndex="{Binding RotationType}" Margin="0,0,0,15" Height="30" FontSize="14" VerticalContentAlignment="Center">
                            <ComboBoxItem Content="0: 0°"/>
                            <ComboBoxItem Content="1: -90°"/>
                            <ComboBoxItem Content="2: 180°"/>
                            <ComboBoxItem Content="3: 90°"/>
                            <ComboBoxItem Content="4: -45°"/>
                            <ComboBoxItem Content="5: -135°"/>
                            <ComboBoxItem Content="6: 135°"/>
                            <ComboBoxItem Content="7: 45°"/>
                        </ComboBox>

                        <TextBlock Text="Color" Foreground="{DynamicResource TextBrush}" FontSize="14"/>
                        <ComboBox SelectedValue="{Binding Stroke}" 
                                  SelectedValuePath="Brush" 
                                  ItemsSource="{x:Static vm:JobViewModel.AvailableColors}"
                                  Margin="0,0,0,15" Height="30">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Width="20" Height="20" Fill="{Binding Brush}" Margin="0,0,10,0" Stroke="Gray" StrokeThickness="0.5"/>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Text="{DynamicResource Str_PropHeight}" Foreground="{DynamicResource TextBrush}" FontSize="14"/>
                        <TextBox Text="{Binding Height, UpdateSourceTrigger=PropertyChanged, StringFormat=N1}" Margin="0,0,0,15" Height="30" FontSize="14" VerticalContentAlignment="Center"/>

                        <CheckBox Content="{DynamicResource Str_PropInc}" IsChecked="{Binding Marking.IsIncrement}" Foreground="{DynamicResource TextBrush}" FontSize="14">
                            <CheckBox.LayoutTransform>
                                <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                            </CheckBox.LayoutTransform>
                        </CheckBox>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <Border Grid.Row="2" Background="{DynamicResource PanelBackBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="ZOOM:" Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>

                <ComboBox Grid.Column="1" Width="80" VerticalContentAlignment="Center"
                          ItemsSource="{Binding ZoomPresets}" SelectedItem="{Binding ZoomScale}"
                          IsEditable="True" Text="{Binding ZoomScale, StringFormat=P0}" Margin="0,0,10,0">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding StringFormat=P0}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Slider Grid.Column="2" Minimum="0.1" Maximum="4.0" Value="{Binding ZoomScale}" 
                        LargeChange="0.1" SmallChange="0.05" VerticalAlignment="Center" 
                        TickFrequency="0.1" IsSnapToTickEnabled="False"/>
            </Grid>
        </Border>

    </Grid>
</UserControl>